def clima = "Nublado y hace fr√≠o"

def showPopulation(neta){
 def habitantes = 50000    
 if(neta == true){
    println habitantes / 2
 } else {
    println habitantes
 }
}

pipeline {
    agent any

    stages {
        stage('Clima') {
            steps {
                echo clima
            }
        }
        stage("Poblacion")
            {
                steps
                {
                    showPopulation(false)
                }
                
            }      
            stage("Poblacion neta")
            {
                steps
                {
                    showPopulation(true)
                }
                
            }               
    }
}
